<div>
    <div class="row">
        <div class="col-1">
            <button class="btn btn-primary" id="btnSearch"> SEARCH</button>
        </div>
        <div col="2">
            <select class="form-control" id="category">
                <option value=""></option>
                <option value="First Name">First Name</option>
                <option value="Last Name">Last Name</option>
                <option value="Email">Email</option>
            </select>
        </div>
        <div class="col-3">
            <input type="text" id="keyword" class="form-control" />
        </div>
    </div>
</div>
<br />
<table id="example">
</table>




<script>
    $("#btnSearch").click(function () {
    var _keyword = $("#keyword").val();
    var _category = $("#category").val();

    LoadDataTables(_category, _keyword);
});

function LoadDataTables(_category, _keyword) {
    $('#example').DataTable({
        paging: true,
        info: true,
        searching: true,
        info: true,
        destroy: true,
        lengthMenu: [[10, 20, 30, -1], [10, "All"]],
        ajax: {
            url: "../Home/getRecords",
            type: "POST",
            data: function (d) {
                d.category = _category;
                d.keyword = _keyword;

            }
        },
        columns: [
            { data: 'StudentId', title: "ID", visible: false },
            { data: 'Lastname', title: "First Name" },
            { data: 'Firstname', title: "Last Name" },
            { data: 'Email', title: "Email" },
            { data: 'Address', title: "Address" }

        ]
    });
}
</script>